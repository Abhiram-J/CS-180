#include <iostream>
using namespace std;

int main (){
      int n ;
    cout << "please input the number for the following pattern\n";
    cin >> n ;
    
     int row  = 1 ;
     while (row <= n ){
        int  col = 1 ;
        while (col<= row ){
             char logic = 'A' + col - 1 ;
             cout << logic ;
             col = col + 1;
     
        }
        cout << "\n";
        row = row + 1 ;
     }
} 
