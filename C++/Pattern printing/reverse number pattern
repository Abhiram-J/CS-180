/* n=4  
desired pattern is
 4 3 2 1 
 4 3 2 1
 4 3 2 1
 4 3 2 1 */
 #include <iostream>

using namespace std;

int main()
{  
    cout<<"Enter a number"<<endl;
    int n; 
    cin>>n; 
    int i=1; 
    while(i<=n) 
    {  
        int j=1;
        while(j<=n) 
        { 
            cout<<" "<<n-j+1; 
            j++; 
            
        } 
        cout<<endl; 
        i++;
    }

    return 0;
}
